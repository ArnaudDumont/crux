<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %level | %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="edu.ucar.ral.crux" level="INFO" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>